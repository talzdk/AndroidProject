<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="il.ac.jct.tazadok.agency.Controller.AddUser"
    android:background="@drawable/user1"

    >
    <Button
        android:text="sign up"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:id="@+id/signUpButton"
        android:onClick=""
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginBottom="56dp"
        android:textStyle="bold"
        android:textColor="@color/colorUser"
        />

    <TextView
        android:text="New User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="36sp"
        android:textColor="@color/colorAccent"
        android:layout_above="@+id/editTextUserName"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/editTextPasswordV"
        android:textColorHint="@color/colorAccent"
        android:layout_marginBottom="85dp"
        android:layout_above="@+id/signUpButton"
        android:layout_alignParentStart="true"
        android:hint="Verify Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="30dp"
        android:id="@+id/editTextUserName"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_marginBottom="13dp"
        android:textColorHint="@color/colorAccent"
        android:hint="Name"
        android:layout_above="@+id/editTextPassword"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="30dp"
        android:id="@+id/editTextPassword"
        android:layout_marginBottom="49dp"
        android:textColorHint="@color/colorAccent"
        android:hint="Password"
        android:layout_above="@+id/editTextPasswordV"
        android:layout_alignParentStart="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:id="@+id/progressBar5"
        android:layout_above="@+id/editTextPasswordV"
        android:layout_alignStart="@+id/signUpButton" />
</RelativeLayout>
