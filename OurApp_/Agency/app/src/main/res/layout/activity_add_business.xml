<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_business"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="il.ac.jct.tazadok.agency.Controller.AddBusiness"
    android:background="@drawable/b"
    >

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddBusiness"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:focusable="false"
        android:textColor="@color/colorBU"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextLink"
        android:hint="Link"
        android:textSize="30dp"
        android:textColorHint="@color/colorB"
        android:textStyle="bold"
        android:layout_above="@+id/buttonAddBusiness"
        android:layout_marginBottom="19dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColorHint="@color/colorB"
        android:id="@+id/editTextEmail"
        android:layout_above="@+id/editTextLink"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextPhone"
        android:hint="Phone"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColorHint="@color/colorB"
        android:layout_above="@+id/editTextEmail"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextAddress"
        android:textStyle="bold"
        android:hint="Address"
        android:textSize="30dp"
        android:textColorHint="@color/colorB"
        android:layout_above="@+id/editTextPhone"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="New business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:fontFamily="casual"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/colorB"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="13dp" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Name"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColorHint="@color/colorB"
        android:id="@+id/editTextName"
        android:layout_above="@+id/editTextAddress"
        android:layout_alignParentStart="true" />

</RelativeLayout>
