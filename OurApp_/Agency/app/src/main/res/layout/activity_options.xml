<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/m"
    tools:context="il.ac.jct.tazadok.agency.Controller.ActivityOptions">


    <TextView
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:fontFamily="casual"
        android:textSize="36sp"
        android:textColor="@color/colorB"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/newActiveButton"
        android:layout_alignStart="@+id/newActiveButton"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/currentUserLabel"
        android:fontFamily="casual"
        android:textColor="@color/colorB"
        android:textSize="18sp"/>

    <Button
        android:text="Add New Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newActiveButton"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <Button
        android:text="Add New Business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/newBuisnessButton"
        android:layout_below="@+id/newActiveButton"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newActiveButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar4" />


</RelativeLayout>
